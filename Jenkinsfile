pipeline {

    agent {

        docker {

            image 'node'

        }

    }

    stages {

        stage('Checkout') {
        
            steps {
              
                echo 'Checking out'
              
            }

        }

        stage('Test') {

            steps {

                echo 'Testing...'

            }

        }

        stage('Lint') {

            steps {

                echo 'Linting...'

            }

        }

        stage('Build') {

            steps {

                echo 'Building...'

            }

        }

        stage('Deploy') {

            steps {

                echo 'Deploying...'

            }

        }

    }

}
